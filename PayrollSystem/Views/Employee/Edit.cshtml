@model EmployeeEditViewModel

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index">
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-controller="Employee" asp-action="Index">
                            Employee list
                        </a>
                    </li>
                    <li class="breadcrumb-item" active aria-current="page">
                        Edit Employee
                    </li>
                </ol>
            </nav><br /><br />
            <form method="post" enctpe="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="EmployeeNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="EmployeeNo" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>

                    <div class="form-group col-md-2">
                        <label asp-for="DateJoined"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DateJoined" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FirstName" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <input asp-for="MiddleName" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group col-md-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="LastName" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="form-check col-md-3">
                        <input asp-for="Gender" type="radio" value="Male"> Male
                        <input asp-for="Gender" type="radio" value="Female"> Female
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>


                    <div class="col-md-2"></div>

                    <div class="form-group col-md-2">
                        <label asp-for="DateOfBirth"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DateOfBirth" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="NationalInsuranceNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NationalInsuranceNo" class="form-control" readonly style="background-color:grey">
                        <span asp-validation-for="NationalInsuranceNo" class="text-danger"></span>
                    </div>

                    <div class="col-md-2"></div>

                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Email" class="form-control" placeholder="Enter email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="PaymentMethod"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PaymentMethod" class="form-control" asp-items="Html.GetEnumSelectList<PayrollSystem.Entity.PaymentMethod>()"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="Role"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Role" class="form-control" placeholder="Enter Role">
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="col-md-2"></div>

                </div>

                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address">
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter City">
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="PostCode"></label>
                    <input asp-for="PostCode" class="form-control" placeholder="Enter PostCode">
                    <span asp-validation-for="PostCode" class="text-danger"></span>
                </div><br /><br />

                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Update</button>
                    <a asp-action="Index" class="btn btn-rounded btn-success float-right"> <i class="fas fa-caret-square-left" style="margin-right:0.7em"></i></a>
                </div>
                <br /><br />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }